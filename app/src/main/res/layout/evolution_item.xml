<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pokeball"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha=".3"
        android:src="@drawable/rotated_pokeball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/pokemonImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="@dimen/card_margin"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/pokeball"
        app:layout_constraintEnd_toEndOf="@id/pokeball"
        app:layout_constraintStart_toStartOf="@id/pokeball"
        app:layout_constraintTop_toTopOf="@id/pokeball" />

    <TextView
        android:id="@+id/pokemonType1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokeball" />

    <TextView
        android:id="@+id/pokemonType2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonType1" />


</androidx.constraintlayout.widget.ConstraintLayout>